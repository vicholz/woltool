[Unit]
Description=WOLTool Daemon
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/home/pi/git/woltool/woltool.py --retries 0 --interval 5 --url ${GSHEET_URL}
ExecStop=/usr/bin/pgrep -f woltool.py | xargs kill -9
User=pi
Group=pi
Restart=always
RestartSec=60

[Install]
Alias=woltool
WantedBy=multi-user.target
